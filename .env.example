# VietQR API Configuration

# Server Configuration
PORT=8080
HOST=0.0.0.0
READ_TIMEOUT=10s
WRITE_TIMEOUT=30s
SHUTDOWN_TIMEOUT=30s

# Security
# Leave empty for public API, set for protected API
API_KEY=
ALLOWED_ORIGINS=*
ENABLE_CORS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_SECOND=100
RATE_LIMIT_BURST=200

# Cache Configuration
CACHE_ENABLED=true
CACHE_MAX_SIZE_MB=100
CACHE_DEFAULT_TTL=5m
CACHE_CLEANUP_INTERVAL=10m

# QR Generation
QR_DEFAULT_SIZE=300
QR_MAX_SIZE=1000
QR_DEFAULT_RECOVERY=M

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
